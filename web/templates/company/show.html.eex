<h2>Show company</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @company.name %>

    <h1> Categories </h1>
    <ul>
    <%= for category <- @categories, @conn do %>
        <li><%= category.title %></li>
    <% end %>
    </ul>
  </li>

</ul>

<%= link "Edit", to: company_path(@conn, :edit, @company) %>
<%= link "Back", to: company_path(@conn, :index) %>
